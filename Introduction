import java.util.Scanner;
public class Solution{
 public static void main (String[]args){
    
    Scanner s = new Scanner(System.in);
    String str = s.nextInt();
    int m1 = s.nextInt();
    int m2 = s.nextInt();
    int m3 = s.nextInt();
    
    int ans = (m1+m2+m3)/3;
    System.out.println(ans);
    System.out.println(str);
    
    }
 
 }
